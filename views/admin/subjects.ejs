<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lyro Admin | Subjects</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: { primary: '#0a0e17', secondary: '#141824', tertiary: '#1d2230' },
                        accent: { teal: '#1ab69d', orange: '#ff6b35' }
                    },
                    fontFamily: { sans: ['Inter', 'sans-serif'] }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="bg-bg-primary text-gray-200 font-sans min-h-screen flex">
    <%- include('sidebar', { page: 'subjects' }) %>
        <div class="flex-1 p-8 overflow-y-auto">
            <div class="max-w-4xl mx-auto">
                <h1 class="text-3xl font-bold text-white mb-8">Manage Subjects</h1>

                <!-- Add Subject Form -->
                <div class="bg-bg-secondary/50 backdrop-blur-sm border border-white/5 rounded-2xl p-8 shadow-xl mb-8">
                    <h2 class="text-xl font-bold text-white mb-6"><i class="fas fa-plus-circle text-accent-teal"></i>
                        Add New Subject</h2>
                    <form action="/admin/subjects/add" method="POST" class="space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-400 mb-1">Subject Name</label>
                                <input type="text" name="name" required placeholder="e.g. Mathematics"
                                    class="w-full bg-bg-tertiary border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-teal/50">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-400 mb-1">Grade</label>
                                <select name="grade" required
                                    class="w-full bg-bg-tertiary border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-teal/50">
                                    <option value="10">Grade 10</option>
                                    <option value="11">Grade 11</option>
                                    <option value="12">Grade 12</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit"
                            class="bg-accent-teal text-white px-6 py-3 rounded-xl font-bold hover:bg-teal-600 transition-all">Add
                            Subject</button>
                    </form>
                </div>

                <!-- List Subjects -->
                <div class="bg-bg-secondary/50 border border-white/5 rounded-2xl overflow-hidden">
                    <table class="w-full text-left">
                        <thead class="bg-white/5">
                            <tr>
                                <th class="p-4 text-xs font-bold text-gray-400 uppercase">Grade</th>
                                <th class="p-4 text-xs font-bold text-gray-400 uppercase">Subject</th>
                                <th class="p-4 text-xs font-bold text-gray-400 uppercase text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-white/5">
                            <% if (subjects.length> 0) { %>
                                <% subjects.forEach(subject=> { %>
                                    <tr class="hover:bg-white/5 transition-colors">
                                        <td class="p-4 text-white">Grade <%= subject.grade %>
                                        </td>
                                        <td class="p-4 text-accent-teal font-medium">
                                            <%= subject.name %>
                                        </td>
                                        <td class="p-4 text-right">
                                            <form action="/admin/subjects/delete/<%= subject._id %>" method="POST"
                                                onsubmit="return confirm('Delete this subject?');" class="inline">
                                                <button type="submit"
                                                    class="text-gray-400 hover:text-red-500 transition-colors"><i
                                                        class="fas fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="3" class="p-8 text-center text-gray-500">No subjects found.
                                                </td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</body>

</html>