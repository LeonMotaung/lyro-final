<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lyro Admin | Schools</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: {
                            primary: '#0a0e17',
                            secondary: '#141824',
                            tertiary: '#1d2230',
                        },
                        accent: {
                            teal: '#1ab69d',
                            orange: '#ff6b35',
                            purple: '#8b5cf6',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="bg-bg-primary text-gray-200 font-sans min-h-screen flex">

    <%- include('sidebar', { page: 'schools' }) %>

        <!-- Main Content -->
        <div class="flex-1 p-8 overflow-y-auto">
            <div class="max-w-4xl mx-auto">
                <header class="flex justify-between items-center mb-8">
                    <div>
                        <h1 class="text-3xl font-bold text-white tracking-tight">Schools Management</h1>
                        <p class="text-gray-400 mt-1">Manage partner schools and their grades.</p>
                    </div>
                </header>

                <!-- Add School Form -->
                <div class="bg-bg-secondary/50 backdrop-blur-sm border border-white/5 rounded-2xl p-6 shadow-xl mb-8">
                    <h2 class="text-lg font-bold text-accent-teal mb-4"><i class="fas fa-plus-circle mr-2"></i>Add New
                        School</h2>
                    <form action="/admin/schools/add" method="POST" class="flex gap-4 items-end">
                        <div class="flex-1">
                            <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">School
                                Name</label>
                            <input type="text" name="name" placeholder="e.g. Parktown Boys' High" required
                                class="w-full bg-bg-tertiary border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-teal/50">
                        </div>
                        <div class="w-1/3">
                            <label
                                class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Grades</label>
                            <div class="flex gap-2 bg-bg-tertiary border border-white/10 rounded-xl px-2 py-2">
                                <!-- Providing checkboxes for grades, focusing on Grade 12 as requested -->
                                <label class="flex items-center gap-2 px-2 py-1 cursor-pointer">
                                    <input type="checkbox" name="grades" value="12" checked
                                        class="accent-accent-teal w-4 h-4">
                                    <span class="text-sm">Grade 12</span>
                                </label>
                                <label class="flex items-center gap-2 px-2 py-1 cursor-pointer">
                                    <input type="checkbox" name="grades" value="11" class="accent-accent-teal w-4 h-4">
                                    <span class="text-sm">Grade 11</span>
                                </label>
                                <label class="flex items-center gap-2 px-2 py-1 cursor-pointer">
                                    <input type="checkbox" name="grades" value="10" class="accent-accent-teal w-4 h-4">
                                    <span class="text-sm">Grade 10</span>
                                </label>
                            </div>
                        </div>
                        <button type="submit"
                            class="bg-accent-teal hover:bg-teal-600 text-white font-bold py-3 px-6 rounded-xl transition-all shadow-lg shadow-accent-teal/20 h-[50px]">
                            Add
                        </button>
                    </form>
                </div>

                <!-- Schools List -->
                <div
                    class="bg-bg-secondary/50 backdrop-blur-sm border border-white/5 rounded-2xl overflow-hidden shadow-xl">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-white/5 border-b border-white/5">
                                <th class="p-4 text-xs font-bold text-gray-400 uppercase tracking-wider">School Name
                                </th>
                                <th class="p-4 text-xs font-bold text-gray-400 uppercase tracking-wider">Grades</th>
                                <th class="p-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-right">
                                    Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-white/5">
                            <% if (schools && schools.length> 0) { %>
                                <% schools.forEach(school=> { %>
                                    <tr class="hover:bg-white/5 transition-colors group">
                                        <td class="p-4">
                                            <div class="font-bold text-white">
                                                <%= school.name %>
                                            </div>
                                            <div class="text-xs text-gray-500">Added: <%= new
                                                    Date(school.createdAt).toLocaleDateString() %>
                                            </div>
                                        </td>
                                        <td class="p-4">
                                            <div class="flex gap-1">
                                                <% school.grades.sort((a,b)=>a-b).forEach(grade => { %>
                                                    <span
                                                        class="bg-accent-purple/10 text-accent-purple px-2 py-1 rounded text-xs font-bold border border-accent-purple/20">Gr
                                                        <%= grade %></span>
                                                    <% }) %>
                                            </div>
                                        </td>
                                        <td class="p-4 text-right flex justify-end gap-2">
                                            <a href="/admin/schools/edit/<%= school._id %>"
                                                class="text-gray-500 hover:text-accent-teal p-2 rounded-lg transition-colors"
                                                title="Edit School">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="/admin/schools/delete/<%= school._id %>" method="POST"
                                                onsubmit="return confirm('Delete <%= school.name %>?');" class="inline">
                                                <button type="submit"
                                                    class="text-gray-500 hover:text-red-400 p-2 rounded-lg transition-colors"
                                                    title="Delete School">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="3" class="p-8 text-center text-gray-500">
                                                    No schools added yet.
                                                </td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
</body>

</html>