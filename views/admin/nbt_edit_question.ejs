<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lyro Admin | Edit Question</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: {
                            primary: '#0a0e17',
                            secondary: '#141824',
                            tertiary: '#1d2230',
                        },
                        accent: {
                            teal: '#1ab69d',
                            orange: '#ff6b35',
                            red: '#ef4444',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
</head>

<body class="bg-bg-primary text-gray-200 font-sans min-h-screen flex">

    <%- include('sidebar', { page: 'nbt' }) %>

        <!-- Main Content -->
        <div class="flex-1 p-8 overflow-y-auto">
            <div class="max-w-4xl mx-auto">
                <div class="flex items-center gap-4 mb-8">
                    <a href="/admin/nbt/edit/<%= testId %>"
                        class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-gray-400 hover:bg-white/10 transition-all">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <h1 class="text-3xl font-bold text-white tracking-tight">Edit Question</h1>
                </div>

                <div
                    class="bg-bg-secondary/50 backdrop-blur-sm border border-white/5 rounded-2xl p-6 shadow-xl relative animate-fade-in">

                    <form action="/admin/nbt/update-question/<%= testId %>/<%= questionIndex %>" method="POST"
                        class="space-y-4">
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-gray-400">Question Text (LaTeX supported)</label>
                            <textarea name="questionText" id="newQuestionText" rows="3" required
                                oninput="updatePreview('newQuestionText', 'newQuestionPreview')"
                                class="w-full bg-bg-tertiary border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-teal/50 font-mono text-sm"><%= question.questionText %></textarea>
                            <div id="newQuestionPreview"
                                class="p-3 bg-white/5 rounded-lg text-gray-300 text-sm min-h-[40px]">Preview...
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Options -->
                            <div class="space-y-3">
                                <label class="text-sm font-medium text-gray-400">Options (Select radio for correct
                                    answer)</label>

                                <div class="flex gap-3 items-start">
                                    <input type="radio" name="correctOptionIndex" value="<%= i %>"
                                        <%=question.correctOptionIndex===i ? 'checked' : '' %> class="accent-accent-teal
                                    w-4 h-4 mt-3 cursor-pointer shrink-0">
                                    <div class="flex-1 space-y-2">
                                        <input type="text" name="options[]" id="editOption<%= i %>"
                                            value="<%= question.options[i] %>"
                                            placeholder="Option <%= i+1 %> (LaTeX supported)" required
                                            oninput="updatePreview('editOption<%= i %>', 'editOptionPreview<%= i %>')"
                                            class="w-full bg-bg-tertiary border border-white/10 rounded-lg px-3 py-2 text-white text-sm focus:outline-none focus:border-accent-teal/50 font-mono">
                                        <div id="editOptionPreview<%= i %>"
                                            class="px-3 py-2 bg-white/5 rounded-lg text-gray-300 text-sm min-h-[38px]">
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>

                        <button type="submit"
                            class="w-full bg-accent-teal hover:bg-teal-600 text-white font-bold py-3 rounded-xl shadow-lg mt-4 transition-all">
                            Update Question
                        </button>

                        <a href="/admin/nbt/edit/<%= testId %>"
                            class="block text-center mt-4 text-gray-400 hover:text-white text-sm">Cancel</a>
                    </form>
                </div>

            </div>
        </div>

        <script>
            function updatePreview(inputId, previewId) {
                const input = document.getElementById(inputId).value;
                const preview = document.getElementById(previewId);

                // Allow basic spacing rendering
                preview.innerHTML = input.replace(/\n/g, '<br>');

                if (window.MathJax) {
                    MathJax.typesetPromise([preview]).catch((err) => console.log(err));
                }
            }

            // Render existing MathJax on load
            document.addEventListener("DOMContentLoaded", () => {
                updatePreview('newQuestionText', 'newQuestionPreview');
                // Initialize option previews
                for (let i = 0; i < 4; i++) {
                    updatePreview(`editOption${i}`, `editOptionPreview${i}`);
                }

                if (window.MathJax) {
                    MathJax.typesetPromise();
                }
            });
        </script>
</body>

</html>