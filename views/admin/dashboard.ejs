<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lyro Admin | Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: {
                            primary: '#0a0e17',
                            secondary: '#141824',
                            tertiary: '#1d2230',
                        },
                        accent: {
                            teal: '#1ab69d',
                            orange: '#ff6b35',
                            purple: '#8b5cf6',
                            green: '#10b981',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="bg-bg-primary text-gray-200 font-sans min-h-screen flex">
    <%- include('sidebar', { page: 'dashboard' }) %>

        <div class="flex-1 p-8 overflow-y-auto">
            <div class="max-w-6xl mx-auto">
                <div class="flex justify-between items-center mb-8">
                    <h1 class="text-3xl font-bold text-white tracking-tight">Dashboard Overview</h1>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    <!-- User Stats -->
                    <div
                        class="bg-bg-secondary/50 backdrop-blur-sm border border-white/5 rounded-2xl p-6 shadow-xl hover:border-accent-teal/30 transition-all group">
                        <div class="flex justify-between items-start mb-4">
                            <div
                                class="p-3 bg-accent-teal/10 rounded-xl text-accent-teal group-hover:bg-accent-teal group-hover:text-white transition-all">
                                <i class="fas fa-users text-xl"></i>
                            </div>
                            <span
                                class="text-xs font-semibold text-gray-500 bg-white/5 px-2 py-1 rounded-full uppercase tracking-wider">Total</span>
                        </div>
                        <h3 class="text-gray-400 text-sm font-medium mb-1">Registered Users</h3>
                        <p class="text-4xl font-bold text-white">
                            <%= stats.userCount || 0 %>
                        </p>
                    </div>

                    <!-- School Stats -->
                    <div
                        class="bg-bg-secondary/50 backdrop-blur-sm border border-white/5 rounded-2xl p-6 shadow-xl hover:border-accent-teal/30 transition-all group">
                        <div class="flex justify-between items-start mb-4">
                            <div
                                class="p-3 bg-accent-teal/10 rounded-xl text-accent-teal group-hover:bg-accent-teal group-hover:text-white transition-all">
                                <i class="fas fa-school text-xl"></i>
                            </div>
                            <span
                                class="text-xs font-semibold text-gray-500 bg-white/5 px-2 py-1 rounded-full uppercase tracking-wider">Partners</span>
                        </div>
                        <h3 class="text-gray-400 text-sm font-medium mb-1">Total Schools</h3>
                        <p class="text-4xl font-bold text-white">
                            <%= stats.schoolCount || 0 %>
                        </p>
                    </div>

                    <!-- Question Stats -->
                    <div
                        class="bg-bg-secondary/50 backdrop-blur-sm border border-white/5 rounded-2xl p-6 shadow-xl hover:border-accent-purple/30 transition-all group">
                        <div class="flex justify-between items-start mb-4">
                            <div
                                class="p-3 bg-accent-purple/10 rounded-xl text-accent-purple group-hover:bg-accent-purple group-hover:text-white transition-all">
                                <i class="fas fa-question-circle text-xl"></i>
                            </div>
                            <span
                                class="text-xs font-semibold text-gray-500 bg-white/5 px-2 py-1 rounded-full uppercase tracking-wider">Content</span>
                        </div>
                        <h3 class="text-gray-400 text-sm font-medium mb-1">Total Questions</h3>
                        <p class="text-4xl font-bold text-white">
                            <%= stats.questionCount || 0 %>
                        </p>
                    </div>

                    <!-- Voucher Stats -->
                    <div
                        class="bg-bg-secondary/50 backdrop-blur-sm border border-white/5 rounded-2xl p-6 shadow-xl hover:border-accent-orange/30 transition-all group">
                        <div class="flex justify-between items-start mb-4">
                            <div
                                class="p-3 bg-accent-orange/10 rounded-xl text-accent-orange group-hover:bg-accent-orange group-hover:text-white transition-all">
                                <i class="fas fa-ticket-alt text-xl"></i>
                            </div>
                            <span
                                class="text-xs font-semibold text-accent-green/80 bg-accent-green/10 px-2 py-1 rounded-full uppercase tracking-wider">Active</span>
                        </div>
                        <h3 class="text-gray-400 text-sm font-medium mb-1">Active Vouchers</h3>
                        <p class="text-4xl font-bold text-white">
                            <%= stats.voucherCount || 0 %>
                        </p>
                    </div>
                </div>

                <!-- Quick Actions / Recent Activity Placeholder -->
                <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="bg-bg-secondary/30 border border-white/5 rounded-2xl p-6">
                        <h3 class="text-lg font-bold text-white mb-4">Quick Actions</h3>
                        <div class="flex gap-4">
                            <a href="/admin/content"
                                class="flex-1 bg-white/5 hover:bg-white/10 p-4 rounded-xl flex flex-col items-center gap-2 transition-all border border-white/5 hover:border-white/20">
                                <i class="fas fa-plus-circle text-2xl text-accent-teal"></i>
                                <span class="text-sm font-medium">Add Question</span>
                            </a>
                            <a href="/admin/vouchers"
                                class="flex-1 bg-white/5 hover:bg-white/10 p-4 rounded-xl flex flex-col items-center gap-2 transition-all border border-white/5 hover:border-white/20">
                                <i class="fas fa-magic text-2xl text-accent-orange"></i>
                                <span class="text-sm font-medium">Create Voucher</span>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
</body>
</html>