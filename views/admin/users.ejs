<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lyro Admin | Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: {
                            primary: '#0a0e17',
                            secondary: '#141824',
                            tertiary: '#1d2230',
                        },
                        accent: {
                            teal: '#1ab69d',
                            orange: '#ff6b35',
                            purple: '#8b5cf6',
                            green: '#10b981',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="bg-bg-primary text-gray-200 font-sans min-h-screen flex">
    <%- include('sidebar', { page: 'users' }) %>

        <div class="flex-1 p-8 overflow-y-auto">
            <div class="max-w-6xl mx-auto">
                <div class="flex justify-between items-center mb-8">
                    <h1 class="text-3xl font-bold text-white tracking-tight">User Management</h1>
                    <div
                        class="bg-bg-tertiary border border-white/5 rounded-xl px-4 py-2 flex items-center gap-2 text-sm text-gray-400">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Search users..."
                            class="bg-transparent border-none focus:outline-none text-white w-64 placeholder-gray-500">
                    </div>
                </div>

                <div
                    class="bg-bg-secondary/50 backdrop-blur-sm border border-white/5 rounded-2xl overflow-hidden shadow-xl">
                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="border-b border-white/5 bg-white/5">
                                    <th class="p-4 text-xs font-bold text-gray-400 uppercase tracking-wider">Name</th>
                                    <th class="p-4 text-xs font-bold text-gray-400 uppercase tracking-wider">Email</th>
                                    <th class="p-4 text-xs font-bold text-gray-400 uppercase tracking-wider">Role</th>
                                    <th class="p-4 text-xs font-bold text-gray-400 uppercase tracking-wider">
                                        Subscription</th>
                                    <th class="p-4 text-xs font-bold text-gray-400 uppercase tracking-wider text-right">
                                        Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-white/5">
                                <% users.forEach(user=> { %>
                                    <tr class="hover:bg-white/5 transition-colors group">
                                        <td class="p-4">
                                            <div class="flex items-center gap-3">
                                                <div
                                                    class="w-8 h-8 rounded-full bg-accent-teal/10 flex items-center justify-center text-accent-teal font-bold text-xs">
                                                    <%= user.name.charAt(0).toUpperCase() %>
                                                </div>
                                                <span class="font-medium text-white">
                                                    <%= user.name %>
                                                </span>
                                            </div>
                                        </td>
                                        <td class="p-4 text-gray-400 text-sm">
                                            <%= user.email %>
                                        </td>
                                        <td class="p-4">
                                            <span
                                                class="px-2 py-1 rounded-full text-xs font-semibold <%= user.role === 'admin' ? 'bg-accent-purple/10 text-accent-purple' : 'bg-white/10 text-gray-400' %>">
                                                <%= user.role %>
                                            </span>
                                        </td>
                                        <td class="p-4 text-sm text-gray-400">
                                            <% if (user.subscriptionExpiry && new Date(user.subscriptionExpiry)> new
                                                Date()) { %>
                                                <span class="text-accent-green"><i class="fas fa-check-circle mr-1"></i>
                                                    Active until <%= new
                                                        Date(user.subscriptionExpiry).toLocaleDateString() %></span>
                                                <% } else { %>
                                                    <span class="opacity-50">No Active Sub</span>
                                                    <% } %>
                                        </td>
                                        <td class="p-4 text-right">
                                            <button
                                                class="bg-white/5 hover:bg-accent-teal hover:text-white text-gray-400 p-2 rounded-lg transition-all text-xs">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>