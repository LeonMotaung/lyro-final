<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lyro Admin | Edit NBT Test</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: {
                            primary: '#0a0e17',
                            secondary: '#141824',
                            tertiary: '#1d2230',
                        },
                        accent: {
                            teal: '#1ab69d',
                            orange: '#ff6b35',
                            red: '#ef4444',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
</head>

<body class="bg-bg-primary text-gray-200 font-sans min-h-screen flex">

    <%- include('sidebar', { page: 'nbt' }) %>

        <!-- Main Content -->
        <div class="flex-1 p-8 overflow-y-auto">
            <div class="max-w-5xl mx-auto">
                <div class="flex items-center gap-4 mb-8">
                    <a href="/admin/nbt"
                        class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-gray-400 hover:bg-white/10 transition-all">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <h1 class="text-3xl font-bold text-white tracking-tight">Edit NBT Test</h1>
                </div>

                <!-- Test Details Form -->
                <div class="bg-bg-secondary/50 backdrop-blur-sm border border-white/5 rounded-2xl p-6 shadow-xl mb-8">
                    <h2 class="text-xl font-bold text-white mb-4">Test Details</h2>
                    <form action="/admin/nbt/update/<%= test._id %>" method="POST" class="space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="space-y-2">
                                <label class="text-sm font-medium text-gray-400">Title</label>
                                <input type="text" name="title" value="<%= test.title %>" required
                                    class="w-full bg-bg-tertiary border border-white/10 rounded-xl px-4 py-2 text-white focus:outline-none focus:border-accent-teal/50">
                            </div>
                            <div class="space-y-2">
                                <label class="text-sm font-medium text-gray-400">Duration (Minutes)</label>
                                <input type="number" name="durationMinutes" value="<%= test.durationMinutes %>" required
                                    class="w-full bg-bg-tertiary border border-white/10 rounded-xl px-4 py-2 text-white focus:outline-none focus:border-accent-teal/50">
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="space-y-2">
                                <label class="text-sm font-medium text-gray-400">Available From</label>
                                <input type="datetime-local" name="availableFrom"
                                    value="<%= new Date(new Date(test.availableFrom).getTime() - new Date().getTimezoneOffset() * 60000).toISOString().slice(0, 16) %>"
                                    required
                                    class="w-full bg-bg-tertiary border border-white/10 rounded-xl px-4 py-2 text-white focus:outline-none focus:border-accent-teal/50"
                                    style="color-scheme: dark;">
                            </div>
                            <div class="space-y-2">
                                <label class="text-sm font-medium text-gray-400">Available Until</label>
                                <input type="datetime-local" name="availableUntil"
                                    value="<%= new Date(new Date(test.availableUntil).getTime() - new Date().getTimezoneOffset() * 60000).toISOString().slice(0, 16) %>"
                                    required
                                    class="w-full bg-bg-tertiary border border-white/10 rounded-xl px-4 py-2 text-white focus:outline-none focus:border-accent-teal/50"
                                    style="color-scheme: dark;">
                            </div>
                        </div>
                        <div class="flex justify-end">
                            <button type="submit"
                                class="bg-white/10 hover:bg-white/20 text-white px-4 py-2 rounded-lg text-sm transition-all">Update
                                Details</button>
                        </div>
                    </form>
                </div>

                <!-- Questions Section -->
                <div class="space-y-6">
                    <div class="flex justify-between items-center">
                        <h2 class="text-2xl font-bold text-white">Questions (<%= test.questions.length %>)</h2>
                        <button onclick="toggleAddQuestionForm()"
                            class="bg-accent-teal hover:bg-teal-600 text-white px-4 py-2 rounded-xl font-bold transition-all shadow-lg shadow-accent-teal/20 text-sm">
                            <i class="fas fa-plus mr-2"></i> Add Question
                        </button>
                    </div>

                    <!-- Add Question Form (Hidden by default) -->
                    <div id="addQuestionForm"
                        class="hidden bg-bg-secondary border border-accent-teal/30 rounded-2xl p-6 shadow-2xl relative animate-fade-in">
                        <button onclick="toggleAddQuestionForm()"
                            class="absolute top-4 right-4 text-gray-400 hover:text-white"><i
                                class="fas fa-times"></i></button>
                        <h3 class="text-lg font-bold text-accent-teal mb-4">New Question</h3>

                        <form action="/admin/nbt/add-question/<%= test._id %>" method="POST" class="space-y-4">
                            <div class="space-y-2">
                                <label class="text-sm font-medium text-gray-400">Question Text (LaTeX supported)</label>
                                <textarea name="questionText" id="newQuestionText" rows="3" required
                                    oninput="updatePreview('newQuestionText', 'newQuestionPreview')"
                                    class="w-full bg-bg-tertiary border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-teal/50 font-mono text-sm"></textarea>
                                <div id="newQuestionPreview"
                                    class="p-3 bg-white/5 rounded-lg text-gray-300 text-sm min-h-[40px]">Preview...
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <!-- Options -->
                                <div class="space-y-3">
                                    <label class="text-sm font-medium text-gray-400">Options (Select radio for correct
                                        answer)</label>

                                    <% for(let i=0; i<4; i++) { %>
                                        <div class="flex gap-3 items-start">
                                            <input type="radio" name="correctOptionIndex" value="<%= i %>" <%=i===0
                                                ? 'checked' : '' %> class="accent-accent-teal w-4 h-4 mt-3
                                            cursor-pointer
                                            shrink-0">
                                            <div class="flex-1 space-y-2">
                                                <input type="text" name="options[]" id="newOption<%= i %>"
                                                    placeholder="Option <%= i+1 %> (LaTeX supported)" required
                                                    oninput="updatePreview('newOption<%= i %>', 'newOptionPreview<%= i %>')"
                                                    class="w-full bg-bg-tertiary border border-white/10 rounded-lg px-3 py-2 text-white text-sm focus:outline-none focus:border-accent-teal/50 font-mono">
                                                <div id="newOptionPreview<%= i %>"
                                                    class="px-3 py-2 bg-white/5 rounded-lg text-gray-300 text-sm min-h-[38px] empty:hidden">
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                            </div>

                            <button type="submit"
                                class="w-full bg-accent-teal hover:bg-teal-600 text-white font-bold py-3 rounded-xl shadow-lg mt-4 transition-all">
                                Save Question
                            </button>
                        </form>
                    </div>

                    <!-- Existing Questions List -->
                    <div class="space-y-4">
                        <% if (test.questions && test.questions.length> 0) { %>
                            <% test.questions.forEach((q, index)=> { %>
                                <div
                                    class="bg-bg-secondary/30 border border-white/5 rounded-2xl p-6 hover:border-white/10 transition-all group relative">
                                    <div
                                        class="absolute top-4 right-4 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                        <!-- Edit Button -->
                                        <a href="/admin/nbt/edit-question/<%= test._id %>/<%= index %>"
                                            class="text-gray-500 hover:text-accent-teal p-2" title="Edit Question">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <!-- Delete Button -->
                                        <form action="/admin/nbt/delete-question/<%= test._id %>/<%= index %>"
                                            method="POST" onsubmit="return confirm('Delete this question?');">
                                            <button type="submit" class="text-gray-500 hover:text-red-400 p-2"><i
                                                    class="fas fa-trash"></i></button>
                                        </form>
                                    </div>

                                    <div class="mb-4">
                                        <span
                                            class="bg-white/10 text-xs font-bold px-2 py-1 rounded text-white mb-2 inline-block">Q
                                            <%= index + 1 %>
                                        </span>
                                        <div class="text-lg text-gray-200 math-content">
                                            <%= q.questionText %>
                                        </div>
                                    </div>

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                                        <% q.options.forEach((opt, optIndex)=> { %>
                                            <div
                                                class="flex items-center gap-3 p-2 rounded-lg <%= optIndex === q.correctOptionIndex ? 'bg-accent-green/10 border border-accent-green/30' : 'bg-white/5' %>">
                                                <div
                                                    class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold <%= optIndex === q.correctOptionIndex ? 'bg-accent-green text-black' : 'bg-white/10 text-gray-400' %>">
                                                    <%= String.fromCharCode(65 + optIndex) %>
                                                </div>
                                                <div class="text-gray-300 text-sm math-content">
                                                    <%= opt %>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <div
                                            class="text-center py-12 bg-white/5 rounded-2xl border border-dashed border-white/10">
                                            <p class="text-gray-500">No questions added yet.</p>
                                        </div>
                                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function toggleAddQuestionForm() {
                const form = document.getElementById('addQuestionForm');
                form.classList.toggle('hidden');
            }

            function updatePreview(inputId, previewId) {
                const input = document.getElementById(inputId).value;
                const preview = document.getElementById(previewId);

                // Allow basic spacing rendering
                preview.innerHTML = input.replace(/\n/g, '<br>');

                if (window.MathJax) {
                    MathJax.typesetPromise([preview]).catch((err) => console.log(err));
                }
            }

            // Render existing MathJax on load
            document.addEventListener("DOMContentLoaded", () => {
                if (window.MathJax) {
                    // Ensure MathJax scans the new content
                    MathJax.typesetPromise();
                }
            });
        </script>
</body>

</html>