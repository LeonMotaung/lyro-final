<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lyro Admin | Vouchers</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body>
    <div class="admin-container">
        <%- include('sidebar', { page: 'vouchers' }) %>

            <div class="main-content">
                <div class="page-header">
                    <h1>Voucher Generation</h1>
                </div>

                <div class="grid-cols-2">
                    <div class="card">
                        <h2>Generate New Vouchers</h2>
                        <form action="/admin/vouchers/create" method="POST">
                            <div class="form-group">
                                <label>Duration</label>
                                <select name="durationMonths" required>
                                    <option value="1">1 Month</option>
                                    <option value="3">3 Months</option>
                                    <option value="6">6 Months</option>
                                    <option value="12">12 Months (1 Year)</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Quantity</label>
                                <input type="number" name="quantity" value="1" min="1" max="50">
                            </div>
                            <button type="submit" class="btn btn-primary">Generate Codes</button>
                        </form>
                    </div>

                    <div class="card">
                        <h2>Recent Output</h2>
                        <% if (newVouchers && newVouchers.length> 0) { %>
                            <div style="background: rgba(0,0,0,0.3); padding: 1rem; border-radius: 8px;">
                                <p>Copy these codes:</p>
                                <ul style="list-style: none; padding: 0;">
                                    <% newVouchers.forEach(v=> { %>
                                        <li
                                            style="font-family: monospace; font-size: 1.2rem; margin: 0.5rem 0; color: var(--admin-accent);">
                                            <%= v.code %>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>
                            <% } else { %>
                                <p style="opacity: 0.5;">Generated codes will appear here.</p>
                                <% } %>
                    </div>
                </div>

                <div class="card">
                    <h2>All Active Vouchers</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Duration</th>
                                <th>Status</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% vouchers.forEach(v=> { %>
                                <tr>
                                    <td style="font-family: monospace;">
                                        <%= v.code %>
                                    </td>
                                    <td>
                                        <%= v.durationMonths %> Months
                                    </td>
                                    <td><span class="badge badge-<%= v.status %>">
                                            <%= v.status %>
                                        </span></td>
                                    <td>
                                        <%= new Date(v.createdAt).toLocaleDateString() %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
</body>

</html>