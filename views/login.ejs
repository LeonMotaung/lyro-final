<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lyro Tutor | Login</title>

    <!-- PWA Meta Tags -->
    <meta name="description" content="Login to Lyro Tutor - Master Grade 12 Mathematics">
    <meta name="theme-color" content="#1abc9c">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json">

    <!-- Icons -->
    <link rel="icon" type="image/png" href="/images/lyro.png">
    <link rel="apple-touch-icon" href="/images/lyro.png">

    <!-- Tailwind & Fonts -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: {
                            primary: '#0a0e17',
                            secondary: '#141824',
                            tertiary: '#1d2230',
                        },
                        accent: {
                            teal: '#1ab69d',
                            tealhover: '#159c85',
                            orange: '#ff6b35',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-out',
                        'slide-up': 'slideUp 0.5s ease-out',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' },
                        },
                        slideUp: {
                            '0%': { transform: 'translateY(20px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' },
                        }
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Remove custom CSS request unless specific overrides needed, keeping styles.css for global resets if any -->
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body
    class="bg-bg-primary text-gray-200 font-sans min-h-screen flex items-center justify-center relative overflow-hidden bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-bg-secondary via-bg-primary to-bg-primary">

    <!-- Preloader -->
    <div id="preloader"
        class="fixed inset-0 bg-bg-primary z-50 flex items-center justify-center transition-opacity duration-500">
        <img src="/images/logo.png" alt="Lyro Tutor Logo" class="w-20 h-20 animate-bounce">
    </div>

    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-accent-teal/10 rounded-full blur-[100px]"></div>
        <div class="absolute top-[20%] right-[10%] w-[30%] h-[30%] bg-accent-orange/5 rounded-full blur-[80px]"></div>
        <div class="absolute -bottom-[10%] left-[20%] w-[40%] h-[40%] bg-purple-500/5 rounded-full blur-[100px]"></div>
    </div>

    <div class="w-full max-w-md p-6 relative z-10">

        <!-- Login Card -->
        <div
            class="bg-bg-secondary/40 backdrop-blur-xl border border-white/5 rounded-3xl p-8 shadow-2xl animate-slide-up">

            <!-- Logo & Brand -->
            <div class="text-center mb-8">
                <img src="/images/logo.png" alt="Lyro Tutor Logo" class="w-16 h-16 mx-auto mb-4 drop-shadow-lg">
                <h1 class="text-3xl font-bold text-white tracking-tight mb-1">Lyro Tutor</h1>
                <p class="text-gray-400 text-sm">Welcome Back!</p>
            </div>

            <!-- Login Form -->
            <form id="login-form" class="space-y-5">
                <!-- Email Input -->
                <div class="space-y-1.5">
                    <label for="email" class="text-sm font-medium text-gray-300 ml-1">
                        <i class="fas fa-envelope mr-1.5 text-accent-teal"></i> Email
                    </label>
                    <input type="email" id="email" name="email" placeholder="Enter your email" required
                        autocomplete="email"
                        class="w-full bg-bg-tertiary/50 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-accent-teal/50 focus:ring-1 focus:ring-accent-teal/50 transition-all">
                    <span class="error-message text-red-400 text-xs hidden pl-1"></span>
                </div>

                <!-- Password Input -->
                <div class="space-y-1.5">
                    <label for="password" class="text-sm font-medium text-gray-300 ml-1">
                        <i class="fas fa-lock mr-1.5 text-accent-teal"></i> Password
                    </label>
                    <div class="relative">
                        <input type="password" id="password" name="password" placeholder="Enter your password" required
                            autocomplete="current-password"
                            class="w-full bg-bg-tertiary/50 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-accent-teal/50 focus:ring-1 focus:ring-accent-teal/50 transition-all pr-10">
                        <button type="button"
                            class="toggle-password absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-white transition-colors focus:outline-none"
                            aria-label="Toggle password visibility">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span class="error-message text-red-400 text-xs hidden pl-1"></span>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="flex items-center justify-between text-sm">
                    <label class="flex items-center gap-2 cursor-pointer group">
                        <div
                            class="relative flex items-center justify-center w-4 h-4 rounded border border-gray-600 group-hover:border-accent-teal transition-colors bg-bg-tertiary">
                            <input type="checkbox" id="remember-me" name="remember"
                                class="peer opacity-0 absolute w-full h-full cursor-pointer">
                            <i
                                class="fas fa-check text-[10px] text-accent-teal opacity-0 peer-checked:opacity-100 transition-opacity"></i>
                        </div>
                        <span class="text-gray-400 group-hover:text-gray-300 transition-colors">Remember me</span>
                    </label>
                    <a href="#" id="forgot-password"
                        class="text-accent-teal hover:text-accent-tealhover transition-colors font-medium">Forgot
                        Password?</a>
                </div>

                <!-- Login Button -->
                <button type="submit"
                    class="w-full bg-gradient-to-r from-accent-teal to-teal-600 hover:from-teal-400 hover:to-teal-500 text-white font-bold py-3.5 rounded-xl shadow-lg shadow-accent-teal/20 hover:shadow-accent-teal/40 transform hover:-translate-y-0.5 transition-all duration-200 mt-2 flex items-center justify-center gap-2">
                    <span class="btn-text">Login</span>
                    <span
                        class="btn-loader hidden w-4 h-4 border-2 border-white/30 border-t-white rounded-full animate-spin"></span>
                </button>

                <!-- Divider -->
                <div class="relative flex items-center justify-center py-2">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-white/10"></div>
                    </div>
                    <span class="relative bg-bg-secondary px-4 text-xs text-gray-500 uppercase">or</span>
                </div>

                <!-- Google Login Button -->
                <div class="text-center mt-4">
                    <button id="google-login" type="button"
                        class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3.5 rounded-xl shadow-lg flex items-center justify-center gap-2">
                        <i class="fab fa-google"></i>
                        <span>Sign in with Google</span>
                    </button>
                </div>

                <!-- Firebase SDKs for Google Auth -->
                <script src="https://www.gstatic.com/firebasejs/10.12.2/firebase-app-compat.js"></script>
                <script src="https://www.gstatic.com/firebasejs/10.12.2/firebase-auth-compat.js"></script>
                <script>
                    // Initialize Firebase (config injected from server)
                    const firebaseConfig = <% - JSON.stringify(firebaseConfig) %>;
                    firebase.initializeApp(firebaseConfig);
                    const auth = firebase.auth();

                    document.getElementById('google-login').addEventListener('click', async () => {
                        const provider = new firebase.auth.GoogleAuthProvider();
                        try {
                            const result = await auth.signInWithPopup(provider);
                            const idToken = await result.user.getIdToken();
                            // Send token to server to create session
                            const response = await fetch('/login/google', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ idToken })
                            });
                            const data = await response.json();
                            if (data.success) {
                                window.location.href = '/learn';
                            } else {
                                alert(data.error || 'Google login failed');
                            }
                        } catch (err) {
                            console.error(err);
                            alert(err.message);
                        }
                    });
                </script>

                <!-- Sign Up Link -->
                <div class="text-center space-y-3">
                    <p class="text-gray-400 text-sm">Don't have an account?</p>
                    <a href="/signup"
                        class="block w-full bg-white/5 hover:bg-white/10 border border-white/10 text-white font-semibold py-3.5 rounded-xl transition-all flex items-center justify-center gap-2">
                        <i class="fas fa-user-plus text-sm"></i> Sign Up
                    </a>
                </div>
            </form>
        </div>

        <!-- Footer -->
        <div class="text-center mt-8 text-xs text-gray-500">
            <p>&copy; 2025 Lyro Tutor. All rights reserved.</p>
        </div>
    </div>

    <script src="/js/script.js"></script>
    <script src="/js/login.js"></script>
    <script>
        // Simple Tailwind Preloader Logic override if needed, or rely on existing script.js
        window.addEventListener('load', () => {
            const preloader = document.getElementById('preloader');
            if (preloader) {
                preloader.style.opacity = '0';
                setTimeout(() => preloader.style.display = 'none', 500);
            }
        });
    </script>
</body>

</html>