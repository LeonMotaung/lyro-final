<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lyro | Taking <%= test.title %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        bg: {
                            primary: '#0a0e17',
                            secondary: '#141824',
                            card: '#1e232d'
                        },
                        accent: {
                            teal: '#1ab69d',
                            orange: '#ff6b35',
                            purple: '#8b5cf6',
                            green: '#10b981',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
</head>

<body class="bg-bg-primary text-white font-sans h-screen flex flex-col overflow-hidden">

    <!-- Header / Timer Bar -->
    <div class="bg-bg-secondary border-b border-white/10 px-6 py-4 flex items-center justify-between shrink-0 z-50">
        <div class="flex items-center gap-4">
            <div class="text-accent-teal font-bold"><i class="fas fa-graduation-cap mr-2"></i>NBT Prep</div>
            <div class="h-4 w-px bg-white/10"></div>
            <div class="text-sm text-gray-400 hidden md:block">
                <%= test.title %>
            </div>
        </div>

        <div class="flex items-center gap-4">
            <div class="flex items-center gap-2 bg-white/5 px-4 py-2 rounded-xl border border-white/5"
                id="timer-container">
                <i class="fas fa-clock text-accent-orange animate-pulse"></i>
                <span id="timer" class="font-mono text-xl font-bold tabular-nums">00:00</span>
            </div>
            <button onclick="submitTest()"
                class="bg-accent-green hover:bg-green-600 text-black px-6 py-2 rounded-xl font-bold transition-all text-sm">
                Finish Test
            </button>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="flex-1 flex overflow-hidden">

        <!-- Question Navigation (Grid) -->
        <div
            class="w-64 bg-bg-secondary/50 border-r border-white/5 p-4 flex-col gap-4 hidden md:flex overflow-y-auto shrink-0">
            <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Questions</h3>
            <div class="grid grid-cols-4 gap-2">
                <% test.questions.forEach((q, idx)=> { %>
                    <button onclick="scrollToQuestion(<%= idx %>)" id="nav-btn-<%= idx %>"
                        class="aspect-square rounded-lg bg-white/5 hover:bg-white/10 border border-white/5 flex items-center justify-center text-sm font-medium transition-all">
                        <%= idx + 1 %>
                    </button>
                    <% }) %>
            </div>
        </div>

        <!-- Questions Feed -->
        <div class="flex-1 overflow-y-auto scroll-smooth p-6 md:p-10" id="questions-container">
            <div class="max-w-3xl mx-auto space-y-12 pb-32">

                <% test.questions.forEach((q, idx)=> { %>
                    <div id="question-<%= idx %>"
                        class="question-block scroll-mt-32 opacity-50 hover:opacity-100 transition-opacity duration-300"
                        data-index="<%= idx %>">
                        <div class="flex gap-4 mb-4">
                            <span class="text-accent-teal font-bold text-lg">
                                <%= idx + 1 %>.
                            </span>
                            <div class="text-lg leading-relaxed math-content flex-1">
                                <%= q.questionText %>
                            </div>
                        </div>

                        <div class="ml-8 space-y-3">
                            <% q.options.forEach((opt, optIdx)=> { %>
                                <label
                                    class="flex items-start gap-3 p-4 rounded-xl border border-white/5 hover:bg-white/5 cursor-pointer transition-all group">
                                    <div
                                        class="relative flex items-center justify-center w-6 h-6 mt-0.5 shrink-0 rounded-full border border-gray-600 group-hover:border-accent-teal transition-colors">
                                        <input type="radio" name="q<%= idx %>" value="<%= optIdx %>"
                                            class="peer appearance-none absolute inset-0 cursor-pointer"
                                            onchange="markAnswered(<%= idx %>)">
                                        <div
                                            class="w-2.5 h-2.5 rounded-full bg-accent-teal opacity-0 peer-checked:opacity-100 transition-opacity">
                                        </div>
                                    </div>
                                    <span class="text-gray-300 group-hover:text-white math-content text-base">
                                        <%= opt %>
                                    </span>
                                </label>
                                <% }) %>
                        </div>
                    </div>
                    <% }) %>

            </div>
        </div>

    </div>

    <!-- Mobile Nav Toggle -->
    <div class="md:hidden fixed bottom-6 left-6 right-6 z-50">
        <div class="bg-bg-card border border-white/10 rounded-2xl p-4 shadow-2xl flex justify-between items-center">
            <span class="text-sm font-medium text-gray-400">Question <span id="current-q">1</span> of <%=
                    test.questions.length %></span>
            <div class="flex gap-2">
                <button onclick="scrollPrev()"
                    class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center"><i
                        class="fas fa-chevron-left"></i></button>
                <button onclick="scrollNext()"
                    class="w-10 h-10 rounded-xl bg-accent-teal text-white flex items-center justify-center"><i
                        class="fas fa-chevron-right"></i></button>
            </div>
        </div>
    </div>

    <!-- Results Modal -->
    <div id="results-modal"
        class="fixed inset-0 z-[100] bg-black/90 backdrop-blur-md hidden flex items-center justify-center p-4 opacity-0 transition-opacity duration-300">
        <div class="bg-bg-card border border-white/10 rounded-2xl p-8 max-w-md w-full text-center transform scale-95 transition-transform duration-300"
            id="results-content">
            <div class="w-20 h-20 rounded-full bg-accent-teal/20 mx-auto mb-6 flex items-center justify-center">
                <i class="fas fa-trophy text-4xl text-accent-teal"></i>
            </div>
            <h2 class="text-3xl font-bold text-white mb-2">Test Completed!</h2>
            <p class="text-gray-400 mb-8">You have submitted your test.</p>

            <div class="bg-white/5 rounded-xl p-6 mb-8">
                <div class="text-sm text-gray-400 uppercase tracking-widest mb-1">Your Score</div>
                <div class="text-5xl font-bold text-white mb-2" id="score-display">--%</div>
                <div class="text-sm text-gray-400" id="score-fraction">-- / --</div>
            </div>

            <a href="/nbt"
                class="block w-full bg-white text-black font-bold py-4 rounded-xl hover:bg-gray-200 transition-colors">
                Back to Dashboard
            </a>
        </div>
    </div>

    <script>
        // Store test data for client-side scoring (In a real app, submit to server!)
        // Getting answers from server-side rendering but securely only if needed. 
        // For Prep, having them in source isn't huge security risk, but better to fetch.
        // We'll embed them for this "offline-capable" feel.
        const correctAnswers = [
            <%= test.questions.map(q => q.correctOptionIndex).join(',') %>
        ];

        const durationSeconds = <%= test.durationMinutes * 60 %>;
        let timeLeft = durationSeconds;
        let timerInterval;

        function startTimer() {
            const timerEl = document.getElementById('timer');
            const container = document.getElementById('timer-container');

            timerInterval = setInterval(() => {
                timeLeft--;

                const m = Math.floor(timeLeft / 60);
                const s = timeLeft % 60;
                timerEl.textContent = `${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;

                if (timeLeft <= 300) { // 5 mins left
                    container.classList.add('border-accent-orange/50', 'text-accent-orange');
                }

                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    submitTest();
                }
            }, 1000);
        }

        function markAnswered(idx) {
            const btn = document.getElementById(`nav-btn-${idx}`);
            if (btn) {
                btn.classList.add('bg-accent-teal', 'text-white', 'border-accent-teal');
                btn.classList.remove('bg-white/5');
            }

            // Highlight current block opacity
            document.querySelectorAll('.question-block').forEach(b => b.classList.remove('opacity-100'));
            document.querySelectorAll('.question-block').forEach(b => b.classList.add('opacity-50'));

            const block = document.getElementById(`question-${idx}`);
            block.classList.remove('opacity-50');
            block.classList.add('opacity-100');
        }

        function scrollToQuestion(idx) {
            document.getElementById(`question-${idx}`).scrollIntoView({ behavior: 'smooth', block: 'center' });

            document.querySelectorAll('.question-block').forEach(b => b.classList.remove('opacity-100'));
            document.querySelectorAll('.question-block').forEach(b => b.classList.add('opacity-50'));

            const block = document.getElementById(`question-${idx}`);
            block.classList.remove('opacity-50');
            block.classList.add('opacity-100');

            document.getElementById('current-q').textContent = idx + 1;
        }

        function submitTest() {
            clearInterval(timerInterval);

            // Calculate Score
            let score = 0;
            const total = correctAnswers.length;

            correctAnswers.forEach((ans, idx) => {
                const selected = document.querySelector(`input[name="q${idx}"]:checked`);
                if (selected && parseInt(selected.value) === ans) {
                    score++;
                }
            });

            const percentage = Math.round((score / total) * 100);

            // Show Results
            document.getElementById('score-display').textContent = `${percentage}%`;
            document.getElementById('score-fraction').textContent = `${score} / ${total}`;

            const modal = document.getElementById('results-modal');
            const content = document.getElementById('results-content');

            modal.classList.remove('hidden');
            // Trigger reflow
            void modal.offsetWidth;
            modal.classList.remove('opacity-0');
            content.classList.remove('scale-95', 'transform');
        }

        // Observer for scrolling (Intersection Observer)
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const idx = entry.target.dataset.index;
                    document.getElementById('current-q').textContent = parseInt(idx) + 1;

                    document.querySelectorAll('.question-block').forEach(b => b.classList.add('opacity-50'));
                    document.querySelectorAll('.question-block').forEach(b => b.classList.remove('opacity-100'));
                    entry.target.classList.remove('opacity-50');
                    entry.target.classList.add('opacity-100');
                }
            });
        }, { threshold: 0.5 });

        document.querySelectorAll('.question-block').forEach(q => observer.observe(q));

        // Start
        startTimer();

    </script>
</body>

</html>